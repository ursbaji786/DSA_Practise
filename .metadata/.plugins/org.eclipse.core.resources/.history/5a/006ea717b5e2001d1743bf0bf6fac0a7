package week1;

public class Pyramid {

	public static void main(String[] args) {
		int i,j;
		int rows = 5;
		//travel throw rows
		for (i=0; i<rows; i++) {
			
			// print space
			for(j=rows-i; j>1 ; j--)
				System.out.println(" ");
			//print star
			for(j=0; j<=i; j++)
				System.out.println("* ");	
		}

	}

}
