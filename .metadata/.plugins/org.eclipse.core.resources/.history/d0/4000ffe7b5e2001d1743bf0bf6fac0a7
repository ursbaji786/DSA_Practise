package week1;

public class Pyramid {

	public static void main(String[] args) {
		int i,j;
		int input = 5; // number of rows
			
		 for (i=0; i<input; i++){
		        for (j=input-i; j>1; j--){
		           System.out.print(" ");
		        }
		        for (j=0; j<=i; j++ ){
		           System.out.print("* ");
		        }
		        System.out.println();
		      }

	}

}
